  <div class="container">
<section id="value">
<div class="text-picture">
    <div class="row row--flex">
          <div class="col-sm-6 text-picture__picture mt-5">
        <div id="info">
  <a href="#" target="_blank" title="View on Google Maps"></a>
</div>
      </div>
      <div class="col-sm-6 row--flex__col--center text-picture__text text-center mt-5">
        <h2>Estimated Home Value Range</h2>
        {{#avm}}        
          <h3 class = "avm my-3">
              ${{this.avm.amount.value}}
          </h3>
          <h4 class = "avm-low">
              ${{this.avm.amount.low}} - 
          </h4>
          <h4 class = "avm-high">
              ${{this.avm.amount.high}}</h3>
          </h4>
        {{/avm}}        
        <div class = "slider text-center">
         <input type="range" min="10" max="1000" step="10" value="300" data-orientation="vertical">
        </div>
      </div>
    </div>
</div>
</section>
<section id="details">
<div class = "row">
  <div class = "col-sm-4 mt-5">
        <h2>Property Details</h2>
  </div>
  <div class = "col-sm-8">
  </div>
</div>
    <div class = "row py-3">
    {{#avm}}
      <div class = "col-sm-4">
        <h4 class = "beds">Beds</h4>
          {{this.building.rooms.beds}}
      </div>
      <div class = "col-sm-4"> 
        <h4 class = "baths">Baths</h4>
          {{this.building.rooms.bathstotal}}
      </div>
      <div class = "col-sm-4">  
        <h4 class = "sqft">Square Footage</h4>
          {{this.building.size.bldgsize}} 
      </div>
    </div>
    <div class = "row py-3">
      <div class = "col-sm-4">
        <h4 class = "beds">Year Built</h4>
          {{this.summary.yearbuilt}} 
      </div>
      <div class = "col-sm-4">
        <h4 class = "baths">Acres</h4>
          {{this.building.size.bldgsize}}
      </div>
      <div class = "col-sm-4">
        <h4 class = "sqft">Last Sold For</h4>
          {{this.summary.yearbuilt}}
      </div>
    </div>
    {{/avm}}
  </div>
</section>
<section id="sales">
  <div class = "container"
<div class="text-picture">
    <div class="row row--flex">
          <div class="col-sm-6 text-picture__picture">
        <img src="./img/location.png" alt="Image" class="img-responsive location-image" />
      </div>
      <div class="col-sm-6 text-center py-5">
        <h2 class="pb-2">Recent Sales Near You</h2>
        {{#each avm.sale.property}}
        <div id="accordion" class = "pr-3" role="tablist">
  <div class="card">
    <div class="card-header" role="tab" id="headingOne">
      <h5 class="mb-0">
        <a data-toggle="collapse" href="#collapse{{this.identifier.apn}}" aria-expanded="true" aria-controls="collapseOne">
          {{this.address.line1}}
        </a>
      </h5>
    </div>

    <div id="collapse{{this.identifier.apn}}" class="collapse" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body">
        <div class = "row">
          <div class = "col-sm-3">
             Sold: ${{this.sale.amount.saleamt}}
           </div>
           <div class = "col-sm-3">
            SqFt: {{this.building.size.universalsize}}
          </div>
          <div class = "col-sm-3">
            Baths: {{this.building.rooms.bathstotal}}
          </div>
          <div class = "col-sm-3">
            Beds: {{this.building.rooms.beds}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    {{/each}}
      </div>
  </div>
</div>
</div>
</section>
<section id="trends">
<div class="text-picture">
    <div class="row row--flex ml-5">
      <div class="col-lg-6 row--flex__col--center text-picture__text text-center">
        <h2>Recent Home Sales Price Trends</h2><h4>median average price</h4>
        <div class="text-picture__picture">
          <img src= "./img/home.png" class="img-responsive home-image">
        </div>
      </div>
        <div class="col-lg-6 text-picture__picture">
          <div class="chart-container" style="position: relative; height:20vh; width:35vw">
                  <canvas id="canvas"></canvas>
          </div>
          {{#each avm.trends}}
        <input type="hidden" class = "chart"
          value="{{this.SalesTrend.avgsaleprice}}"></input>
        {{/each}}
        </div>
    </div>
</div>
</section>
</div>
